{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Backup Metadata Schema",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["backup_id", "start_time", "end_time", "status"],
    "properties": {
      "backup_id": {
        "type": "string",
        "description": "Unique identifier for the backup"
      },
      "backup_type": {
        "type": "string",
        "description": "Type of backup (optional, will be classified if missing)"
      },
      "start_time": {
        "type": "string",
        "format": "date-time",
        "description": "Backup start timestamp"
      },
      "end_time": {
        "type": "string",
        "format": "date-time",
        "description": "Backup end timestamp"
      },
      "status": {
        "type": "string",
        "enum": ["success", "failure", "partial"],
        "description": "Backup execution status"
      },
      "source_system": {
        "type": "string",
        "description": "Source system identifier"
      },
      "metadata": {
        "type": "object",
        "description": "Additional metadata fields"
      }
    }
  }
}
